<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/white_dots_background</item>
    </style>

    <style name="WhiteShadowText" parent="android:Widget.TextView">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderButtonWhiteShadowText" parent="WhiteShadowText">
        <item name="android:textColor">@color/button_finish</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderTitleWhiteShadowText" parent="WhiteShadowText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GreyBoldShadowText" parent="android:Widget.TextView">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#565858</item>
    </style>

    <style name="GroupSubtitleWhiteShadowText" parent="WhiteShadowText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GroupTitleWhiteShadowText" parent="WhiteShadowText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlackShadowText" parent="android:Widget.TextView">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GroupChildTitleBlackShadowText" parent="BlackShadowText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>